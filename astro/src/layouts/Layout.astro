---
import { Image } from "astro:assets";
import footerImg from "../images/grain-footer.svg";
import Nav from "../components/Nav.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-pt-20">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-5 dark:bg-purple-90">
		<Nav />
		<main class="font-sans antialiased tracking-wide text-gray-90 dark:text-gray-10">
			<slot />
		</main>
		<footer class="mt-32">
			<div class="flex gap-6 justify-center items-center bg-gray-5 dark:bg-purple-90 pr-[28rem]">
				<Image src={footerImg} alt="Grain logo ballons." />
				<div class="text-gray-50">Copyright Â© 2022 Grain Lang</div>
			</div>
		</footer>
	</body>
</html>

<script>
	import { selectedTheme } from "../store";

	selectedTheme.subscribe(theme => {
    if (theme == "dark") {
      document.documentElement.classList.add("dark");
    } else {
      document.documentElement.classList.remove("dark");
    }
	})


