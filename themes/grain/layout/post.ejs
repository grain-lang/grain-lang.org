<% let author = getAuthor(page.author); %>
<%- partial('_partial/hero') %>
<div class="page-wrapper">
  <div id="all-content-wrapper">
    <article class="blog-wrapper">
      <h1 class="page-title"><%- page.title %></h1>
      <p class="blog-item-subtitle"><%- page.subtitle %></p>
      <div class="blog-author">
        <img class="blog-author-photo" src="<%- author.headshot %>" />
        <div class="blog-author-info">
          <div class="blog-author-name"><%- author.name %></div>
          <div class="blog-date"><%- page.date.format('MMMM D, YYYY') %></div>
        </div>
        <div class="blog-author-socials">
          <% if (author.github) { %>
            <a href="https://github.com/<%- author.github %>" class="blog-author-social"><i class="fab fa-github"></i></a>
          <% } %>
          <% if (author.twitter) { %>
            <a href="https://twitter.com/<%- author.twitter %>" class="blog-author-social"><i class="fab fa-twitter"></i></a>
          <% } %>
        </div>
      </div>
      <div class="blog-cover-photo-wrapper">
        <div class="blog-img-wrapper">
          <img class="blog-cover-photo" src="<%- page.cover %>" />
        </div>
        <% if (page.coverAttribution) { %><figcaption class="blog-cover-attribution">Photo: <%- page.coverAttribution %></figcaption><% } %>
      </div>
      <div class="blog-content">
        <%- page.content %>
      </div>
      <hr>
      <div class="blog-author large">
        <img class="blog-author-photo" src="<%- author.headshot %>" />
        <div class="blog-author-info">
          <div class="blog-author-name"><%- author.name %></div>
          <div class="blog-author-title"><%- author.title %></div>
        </div>
        <div class="blog-author-socials">
          <% if (author.github) { %>
            <a href="https://github.com/<%- author.github %>" class="blog-author-social"><i class="fab fa-github"></i></a>
          <% } %>
          <% if (author.twitter) { %>
            <a href="https://twitter.com/<%- author.twitter %>" class="blog-author-social"><i class="fab fa-twitter"></i></a>
          <% } %>
        </div>
      </div>
      <div class="join-mailing">
        <h4 class="join-mailing-title">Join our mailing list for periodic farm-to-desktop goodness:</h4>
        <!-- Begin Mailchimp Signup Form -->
        <div id="mc_embed_signup">
          <form action="https://grain-lang.us18.list-manage.com/subscribe/post?u=b33eb7484930855e59aae309f&amp;id=e8b0f20480" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
            <div id="mc_embed_signup_scroll">
              <div class="mc-field-group">
                <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="Your email address">
              </div>
              <div id="mce-responses" class="clear">
                <div class="response" id="mce-error-response" style="display:none"></div>
                <div class="response" id="mce-success-response" style="display:none"></div>
              </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
              <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_b33eb7484930855e59aae309f_e8b0f20480" tabindex="-1" value=""></div>
              <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button mc-submit"></div>
            </div>
          </form>
        </div>
        <!--End mc_embed_signup-->
      </div>
    </article>
  </div>
</div>
<%- partial('_partial/footer') %>
